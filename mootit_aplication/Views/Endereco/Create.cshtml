@model mootit_aplication.Models.ENDERECO

@{
    ViewBag.Title = "Novo Endereço";
}

<link href="@Url.Content("~/Content/Formulario.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.dataTables.columnFilter.js")" type="text/javascript"></script>


<script language="javascript" type="text/javascript">
    var string = location.href.split("=").pop();
    var url_atual = window.location.href;
    var USU_ID = url_atual.split("=").pop();

</script>


@using (Html.BeginForm("Create", "Endereco", FormMethod.Post, new { @class = "form-inline" }))
{
    
    <div class="offset3">
        <fieldset class="span8">
            <div class="controls-row">
                <div class="control-group span6">
                    <label>
                        Logradouro:
                    </label>
                    <div class="controls">
                        @Html.TextBoxFor(model => model.END_LOGRADOURO, new { @class = "span19" })
                    </div>
                </div>
                <div class="control-group span4">
                    <label>
                        Numero:
                    </label>
                    <div class="controls">
                        @Html.TextBoxFor(model => model.END_NR, new { @class = "span6" })
                    </div>
                </div>
            </div>

            <div class="controls-row">
                <div class="control-group span4">
                    <label>
                        Cidade:
                    </label>
                    <div class="controls">
                        @Html.TextBoxFor(model => model.END_CIDADE, new { @class = "span12" })
                    </div>
                </div>
                <div class="control-group span4">
                    <label>
                        Bairro:
                    </label>
                    <div class="controls">
                        @Html.TextBoxFor(model => model.END_BAIRRO, new { @class = "span12" })
                    </div>
                </div>
            </div>
            
            <div class="controls-row">
                <div class="control-group span4">
                    <label>
                        Cep:
                    </label>
                    <div class="controls">
                        @Html.TextBoxFor(model => model.END_CEP, new { @class = "span12" })
                    </div>
                </div>
            </div>


            <div class="pagination-centered">
                <legend></legend>
                @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn", title = "Cique para Voltar" })
                <input type="submit" class="btn btn-success" value="Salvar" title="Clique para salvar novo Endereco" />
            </div>
        </fieldset>
    </div>
    <div id="validador">
        @Html.ValidationSummary(true)
    </div>


}